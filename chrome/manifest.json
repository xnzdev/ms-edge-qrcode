{
  "name": "Best QRcode(快速生成二维码)",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "A Chromium Extension to show the QRcode of the link.",
  "icons": {
    "128": "icons/icon-128x128.png"
  },
  "browser_action": {
    "default_popup": "/index.html"
  },
  "permissions": ["tabs"],
