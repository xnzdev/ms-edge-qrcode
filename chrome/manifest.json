  //   {
  //     "js": ["popup.js"],
  //     // 在什么情况下使用该脚本
  //     "matches": ["http://*/*", "https://*/*"],
  //     // 什么情况下运行【文档加载开始】
  //     "run_at": "document_start"
  //   }
  // ],
  "background": {
    "scripts": ["popup.js"]
  }
}
